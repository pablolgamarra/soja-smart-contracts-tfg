{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2023"],
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "ignoreDeprecations": true,
  },
  "exclude": ["node_modules", "dist", "build"]
}
